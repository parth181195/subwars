# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database Configuration (Sequelize/PostgreSQL)
# Get from Supabase Dashboard → Settings → Database → Connection String
# Or use: Project Settings → Database → Connection pooling → Connection string (use port 5432)
DATABASE_HOST=db.your-project-id.supabase.co
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-database-password
DATABASE_NAME=postgres
DATABASE_SSL=true

# Firebase Storage Configuration (for file uploads)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-service-account-email@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Here\n-----END PRIVATE KEY-----\n"
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# API Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration (use * to allow all origins in development)
CORS_ORIGIN=*

# Bunny CDN Storage Configuration (for hosting voice-lines.json and other static files)
# Get from: https://bunnycdn.com/dashboard/storagezones
BUNNY_STORAGE_ZONE=your-storage-zone-name
BUNNY_STORAGE_API_KEY=your-bunny-storage-api-key
BUNNY_STORAGE_REGION=ny
BUNNY_CDN_URL=https://your-storage-zone-name.b-cdn.net

